<Window x:Class="DemiurgeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemiurgeApp"
        mc:Ignorable="d"
        Title="Demiurge App" Height="350" Width="525"
        AllowDrop="True">
    <Grid>
        <StackPanel>
            <ScrollViewer Height="280">
                <Grid Name="SettingsGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                </Grid>
            </ScrollViewer>
            
            <Button 
                Content="Run Meter-scale Map Scenario" 
                Click="RunMeterScaleMapScenario" />
        </StackPanel>
    </Grid>
</Window>
